<% if resource.errors.present? %>
  <div>
    <h2>
      <%= t('.header', count: resource.errors.count) %>:
    </h2>
    <ul class="list-group">
      <% resource.errors.full_messages.each do |message|%>
        <li class="list-group-item list-group-item-danger"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
