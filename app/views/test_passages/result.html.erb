<h2><%= t('.header', title: @test_passage.test.title) %> </h2>

<% if @test_passage.success? %>
  <p>
    <%= t('.result') %> <span class="success"> <%= @test_passage.percent_correct %></span> %.
    <%= t('.succes_test') %>
  </p>
  <% else %>
  <p>
    <%= t('.result') %> <span class="fail"> <%= @test_passage.percent_correct %></span> %.
    <%= t('.fail_test') %>
  </p>
<% end %>

<%= link_to t('buttons.all_tests'), tests_path %>
