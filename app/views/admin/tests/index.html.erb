<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
  <h1><%= t('.header') %></h1>
  </div>

  <div class="col-12 ">
    <%= link_to t('buttons.create_test'), new_admin_test_path, class: "btn btn-outline-info" %>
      
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.question') %></th>
          <th colspan="2"><%= t('.action') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      <tbody>
    </table>
  </div> 
</div>
