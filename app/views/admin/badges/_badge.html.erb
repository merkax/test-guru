<tr>
  <td class="align-middle">
    <%= content_tag :span, badge.title %>
  </td>
  <td class="align-middle">
    <%= image_tag badge.image %>
  </td>
  <td class="align-middle">
    <%=  badge.rule %>
  </td>
  <td class="align-middle">
    <%=  badge.value %>
  </td>

  <td class="align-middle">
      <%=  link_to t('buttons.show'),
                  admin_badge_path(badge),
                  class: "btn btn-outline-info" %></td>
  <td class="align-middle">
      <%= link_to t('buttons.edit'),
                  edit_admin_badge_path(badge),
                  class: "btn btn-outline-info " %></td>
  <td class="align-middle">
      <%= link_to t('buttons.delete'),
                  admin_badge_path(badge),
                  method: :delete,
                  data:   { confirm: t('delete_confirm') },
                  class: "btn btn-outline-info" %></td>
</tr>
